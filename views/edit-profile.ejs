<%- include('./partials/head.ejs') %>

<html>
  <body>
    <%- include('./partials/header.ejs') %>
    <div class="container">
      <div class="new-container">
        <form class="form-new" enctype="multipart/form-data">
          <div class="form-heading">
            <h3 class="heading heading-third">Редактировать профиль</h3>
          </div>
          <div class="form-box-new">
            <label for="email">Почта</label>
            <input
              type="email"
              name="email"
              id="email"
              value="<%= user.email %>"
            />
            Фото профиля
            <img src="<%= user.photo %>" class="user-photo" alt="" />
            <label for="user-img" class="file-label"
              >Загрузить новую фотографию</label
            >
            <input
              type="file"
              name="user-img"
              id="user-img"
              class="hidden"
              accept="image/*"
            />
            <label for="username">Логин</label>
            <input
              type="text"
              name="username"
              id="username"
              value="<%= user.username %>"
            />
            <label for="description">Обо мне</label>
            <input
              type="text"
              name="description"
              id="description"
              value="<%= user.description %>"
            />
          </div>

          <button type="submit" class="btn btn-fill">Создать</button>
        </form>
      </div>
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js"
      integrity="sha512-uMtXmF28A2Ab/JJO2t/vYhlaa/3ahUOgj1Zf27M5rOo8/+fcTUVH0/E0ll68njmjrLqOBjXM3V9NiPFL5ywWPQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/js/editProfile.js"></script>
  </body>
</html>
